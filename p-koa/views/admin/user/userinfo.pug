include ../includes/container
    form(action="/admin/user/saveinfo", method="post").user-form
        .form-group
            label 用户名称
            input(type="text", placeholder="请输入用户名称", value=(data.name || ''), name="name")
        .form-group
            label 手机号码
            input(type="text", placeholder="请输入用户手机号码", value=data.tel, name="tel", readonly)
        .form-group
            label 用户邮箱
            input(type="email", placeholder="请输入用户邮箱", value=data.email, name="email")
        .form-group
            label 用户头像
            .input-item
                .form-upload
                    input(type="file", id="iconFile")
                    span +
                        img(src=data.icon, id="iconImg")
                    input(type="hidden", name="icon", value=data.icon)
        .form-group-footer
            span#submit.btn.btn-primary 提交
    script(type="text/javascript", src="/dist/admin/frontend/user/user.min.js")